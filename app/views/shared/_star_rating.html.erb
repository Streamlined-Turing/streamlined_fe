<div class='col-md-2'>
  <%= form_with url: "/media/#{media.id}", method: :patch do |f| %>
    <div class="rating">
      <% (1..5).each do |value| %>
        <%= f.radio_button :rating, value, id: "r#{value}", checked: (media.user_rating == value) %>
        <%= label_tag "r#{value}", '' %>
      <% end %>
    </div>
    <br><br>
      <%= f.submit "Save Rating", class: "btn-default btn" %>
  <% end %>
</div>

